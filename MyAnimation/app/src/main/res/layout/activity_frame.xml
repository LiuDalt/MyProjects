<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.myanimation.activity.FrameActivity">

    <Button
        android:id="@+id/xml_frame_btn"
        android:text="xml帧动画"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/frame_imgv_xml"
        android:layout_gravity="center"
        android:background="@drawable/img0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/custom_frame_btn"
        android:text="Custom帧动画"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/frame_imgv_cust"
        android:layout_gravity="center"
        android:background="@drawable/img0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
